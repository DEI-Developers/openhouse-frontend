{
  "compilerOptions": {
    "module": "es2022",
    "jsx": "preserve",
    "checkJs": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@assets/*": ["assets/*"],
      "@context/*": ["context/*"],
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
      "@hooks/*": ["hooks/*"],
      "@pages/*": ["pages/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
    }
  },
  "include": ["src"]
}